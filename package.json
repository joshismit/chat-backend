{
  "name": "newchatapp-backend",
  "version": "1.0.0",
  "description": "Express + Prisma backend for chat app",
  "main": "dist/index.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "watch": "ts-node-dev --respawn --transpile-only src/index.ts",
    "start:dev": "npm run dev",
    "start:prod": "npm run build && npm start",
    "check-db": "node scripts/check-database.js",
    "create-test-data": "npm run build && node scripts/create-test-data.js",
    "create-random-users": "node scripts/create-random-users.js",
    "seed-dummy-data": "npm run build && node scripts/seed-dummy-data.js",
    "add-bhavesh": "npm run build && node scripts/add-user-bhavesh.js"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.490.0",
    "@aws-sdk/s3-request-presigner": "^3.490.0",
    "@prisma/adapter-pg": "^7.4.0",
    "@prisma/client": "^7.4.0",
    "@types/bcrypt": "^6.0.0",
    "@types/body-parser": "^1.19.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.10.5",
    "bcrypt": "^6.0.0",
    "body-parser": "^1.20.2",
    "cors": "^2.8.6",
    "docker": "^1.0.0",
    "dotenv": "^16.3.1",
    "express": "^4.22.1",
    "ioredis": "^5.3.2",
    "jsonwebtoken": "^9.0.2",
    "livekit-server-sdk": "^2.15.0",
    "multer": "^1.4.5-lts.1",
    "nanoid": "^5.0.4",
    "pg": "^8.18.0",
    "typescript": "^5.3.3"
  },
  "devDependencies": {
    "@types/pg": "^8.16.0",
    "prisma": "^7.4.0",
    "ts-node-dev": "^2.0.0"
  }
}
